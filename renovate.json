{
  "pinDigest": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "recreateWhen": "always",
  "ignoreTests": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["digest"],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "FROM (?<depName>.*):(?<verCompatibility>.*)-(?<currentValue>.+)@(?<currentDigest>sha256:.+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "debian",
      "extractVersionTemplate": "^{{verCompatibility}}-(?<version>[a-z]+)$"
    },
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "FROM (?<depName>.*):(?<verCompatibility>.*)-alpine(?<currentValue>.+)@(?<currentDigest>sha256:.+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "debian",
      "extractVersionTemplate": "^{{verCompatibility}}(?<version>[a-z]+)$"
    },
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "FROM (?<depName>.*):(?<currentValue>.+)-(?<verCompatibility>.*)@(?<currentDigest>sha256:.+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "python",
      "extractVersionTemplate": "^(?<version>.+)-{{verCompatibility}}$"
    }
  ]
}
